{
    "manifest_version": 3,
    "name": "ReadBuddy AI Screen Reader",
    "version": "1.2.0",
    "description": "AI-powered summarization, multi-frame video visual analysis with T5 summarization, and screen reading.",
    
    "action": {
        "default_title": "ReadBuddy - AI Screen Reader"
    },
    
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    
    "background": {
        "service_worker": "background.js"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js", "screenreader.js"],
            "all_frames": true,
            "run_at": "document_idle"
        }
    ],
    
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "tts",
        "sidePanel",
        "unlimitedStorage",
        "tabCapture",
        "notifications"
    ],
    
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "http://localhost:8000/*",
        "<all_urls>"
    ],
    
    "commands": {
        "summarize_page": {
            "suggested_key": {
                "default": "Alt+1"
            },
            "description": "Summarize and read the webpage"
        },
        "describe_images": {
            "suggested_key": {
                "default": "Alt+2"
            },
            "description": "Describe images on the page"
        },
        "summarize_video": {
            "suggested_key": {
                "default": "Alt+3"
            },
            "description": "Summarize visible video"
        },
        "stop_speaking": {
            "suggested_key": {
                "default": "Alt+4"
            },
            "description": "Stop text-to-speech"
        }
    }
}
{
  "manifest_version": 3,
  "name": "ReadBuddy - AI Screen Reader",
  "version": "4.0.0",
  "description": "AI-powered screen reader that summarizes text, describes images, and analyzes videos - Always accessible via side panel",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts",
    "sidePanel"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_title": "Open ReadBuddy Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}